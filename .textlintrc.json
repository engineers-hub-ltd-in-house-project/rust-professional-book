{
  "plugins": {
    "@textlint/markdown": {
      "extensions": [".md"]
    }
  },
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 120
      },
      "max-comma": {
        "max": 4
      },
      "max-ten": {
        "max": 3
      },
      "max-kanji-continuous-len": {
        "max": 6,
        "allow": ["型安全性", "非同期処理", "所有権システム"]
      },
      "ja-no-mixed-period": {
        "allowPeriodMarks": [":", "："]
      },
      "no-exclamation-question-mark": false,
      "no-doubled-joshi": {
        "strict": false,
        "allow": ["も", "や", "にも"]
      },
      "ja-no-successive-word": true,
      "ja-no-weak-phrase": false
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      },
      "ja-space-around-code": {
        "before": true,
        "after": true
      },
      "ja-no-space-between-full-width": true
    },
    "prh": {
      "rulePaths": ["./prh.yml"]
    }
  },
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "/\\$\\$[\\s\\S]*?\\$\\$/m",
        "/^\\s*\\|\\s*.*\\s*\\|\\s*$/m"
      ]
    }
  }
}